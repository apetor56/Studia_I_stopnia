200 500 translate

/square {
    /a exch def
    /len a 2 div def
    /mlen a -1 mul def

    /mod exch def

    4 {
        a 0 rlineto
        -90 rotate
    } repeat

    gsave
        3 setlinewidth
        1 0 0 setrgbcolor
        stroke
    grestore

    mod 1 eq {
        0 a 10 sub moveto
        0 0 0 setrgbcolor
        eofill
    } if
} def

